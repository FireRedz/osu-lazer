{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "jsRules": {},
    "rules": {
      "no-submodule-imports": false,
      "max-line-length": {
        "options": [120]
      },
      "whitespace": [true, "check-module"],
      "new-parens": true,

      "jsx-alignment": true,
      "jsx-wrap-multiline": false,
      "jsx-boolean-value": ["always"],
      "jsx-equals-spacing": ["always"],
      "jsx-key": true,
      "jsx-no-lambda": false,
      "jsx-no-multiline-js": false
    },
    "rulesDirectory": [],
    "plugins": [
        {
            "name": "typescript-tslint-plugin"
        }
    ]
}
